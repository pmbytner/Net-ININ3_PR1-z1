<Window
    x:Class="Net_ININ3_PR1_z1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Net_ININ3_PR1_z1"
    mc:Ignorable="d"
    
    Title="Nasza aplikacja"
    Height="650"
    Width="400"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ScrollViewer
            Grid.ColumnSpan="3"
            Grid.Row="2"
            Grid.RowSpan="3"
            Margin="10,0,10,0"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            >
            <StackPanel Orientation="Horizontal">
                <Border
                    Background="Red"
                    BorderThickness="1"
                    BorderBrush="Black"
                    MinHeight="100"
                    MinWidth="100"
                    />
                <Border
                    Background="Blue"
                    BorderThickness="1"
                    BorderBrush="Black"
                    MinHeight="100"
                    MinWidth="100"
                    />
                <Border
                    Background="Red"
                    BorderThickness="1"
                    BorderBrush="Black"
                    MinHeight="100"
                    MinWidth="100"
                    />
                <Border
                    Background="Blue"
                    BorderThickness="1"
                    BorderBrush="Black"
                    MinHeight="100"
                    MinWidth="100"
                    />
                <Border
                    Background="Red"
                    BorderThickness="1"
                    BorderBrush="Black"
                    MinHeight="100"
                    MinWidth="100"
                    />
                <Border
                    Background="Blue"
                    BorderThickness="1"
                    BorderBrush="Black"
                    MinHeight="100"
                    MinWidth="100"
                    />
            </StackPanel>
        </ScrollViewer>
        <WrapPanel
            Grid.ColumnSpan="3"
            Grid.RowSpan="2"
            Margin="10"
            Background="#FFEAE4E4"
            >
            <Border
                Background="Red"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="Yellow"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="Green"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="Cyan"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="Blue"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="Magenta"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="Black"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="White"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
            <Border
                Background="Gray"
                BorderThickness="1"
                BorderBrush="Black"
                MinHeight="100"
                MinWidth="100"
                />
        </WrapPanel>


    </Grid>
</Window>
