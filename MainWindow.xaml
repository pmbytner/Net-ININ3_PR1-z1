<Window
    x:Class="Net_ININ3_PR1_z1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Net_ININ3_PR1_z1"
    mc:Ignorable="d"
    
    Title="Nasza aplikacja"
    Height="650"
    Width="400"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>Etykieta</Label>
        <Label Grid.Row="1">Kolejna</Label>
        <Label Grid.Row="2">Jeszcze jedna</Label>
        <Border Grid.Row="3"></Border>
        <Border Grid.Row="3" Grid.Column="1"></Border>
        <Border
            Style="{StaticResource SpecjalnaRamka}"
            Grid.Row="3"
            Grid.Column="2"
            ></Border>
        <Border
            Style="{StaticResource SpecjalnaRamka}"
            Grid.Row="4"
            ></Border>
        <Border
            Style="{StaticResource SpecjalniejszaRamka}"
            Grid.Row="4"
            Grid.Column="1"
            ></Border>
        
        <WrapPanel
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            >
            <WrapPanel.Resources>
                <Style
                    TargetType="Label"
                    BasedOn="{StaticResource {x:Type Label}}"
                    >
                    <Setter Property="BorderBrush" Value="Green"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Foreground" Value="Blue"/>
                </Style>
            </WrapPanel.Resources>
            <Label>Etykieta we wrappanelu</Label>
            <Label>E</Label>
            <Label>ty</Label>
            <Label>kie</Label>
            <Label>ty</Label>
        </WrapPanel>
    </Grid>
</Window>
